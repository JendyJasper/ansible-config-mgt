pipeline {
  agent any
  
  stages {

    stage('SCM Checkout'){
      steps {
              git branch: 'main', url: 'https://github.com/JendyJasper/tooling.git'
      }
    }

    stage('Install Nginx'){
      steps {
        ansiblePlaybook credentialsId: 'ansible-jenkins-ssh', 
        disableHostKeyChecking: true, installation: 'ansible', 
        inventory: '${WORKSPACE}/inventory/dev.yml', playbook: '${WORKSPACE}/playbooks/site.yml', 
        skippedTags: 'tooling-html'
      }
    }

    stage("Copy html") {
      steps {
        ansiblePlaybook credentialsId: 'ansible-jenkins-ssh', 
        disableHostKeyChecking: true, installation: 'ansible', 
        inventory: '${WORKSPACE}/inventory/dev.yml', playbook: '${WORKSPACE}/playbooks/site.yml', 
        tags: 'tooling-html'
      }
    }
  }
}