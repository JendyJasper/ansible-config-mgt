pipeline {
  agent any
  
  stages {

    stage('SCM Checkout'){
      steps {
          git credentialsId: 'be7c03d3-2a77-4e2e-a4f7-4fae59b354d5', 
          url: 'https://github.com/PuneethReddyHC/online-shopping-system.git'
      }
    }

    stage('Install Nginx'){
      steps {
        ansiblePlaybook credentialsId: 'ansible-jenkins-ssh', 
        disableHostKeyChecking: true, installation: 'ansible', 
        inventory: '/home/ubuntu/ansible-config-mgt/inventory/dev.yml', 
        playbook: '/home/ubuntu/ansible-config-mgt/playbooks/site.yml', 
        skippedTags: 'tooling-html'
      }
    }

    stage("Copy html") {
      steps {
        ansiblePlaybook credentialsId: 'ansible-jenkins-ssh', 
        disableHostKeyChecking: true, installation: 'ansible', 
        inventory: '/home/ubuntu/ansible-config-mgt/inventory/dev.yml', 
        playbook: '/home/ubuntu/ansible-config-mgt/playbooks/copy_to_nginx.yml', 
        tags: 'tooling-html'
      }
    }
  }
}
