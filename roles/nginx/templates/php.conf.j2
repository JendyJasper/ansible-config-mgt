server {
    listen 80;
    server_name {{ ip_address }};
    root /usr/share/nginx/html;

    index index.html index.htm index.php;

    location / {
        try_files $uri $uri/ =404;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php7.4-fpm.sock;
     }

    location ~ /\.ht {
        deny all;
    }

}